{
  "name": "coinpay.tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for CoinPay platform",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "dotnet test ../CoinPay.Tests/CoinPay.Api.Tests/CoinPay.Api.Tests.csproj",
    "test:integration": "dotnet test ../CoinPay.Tests/CoinPay.Integration.Tests/CoinPay.Integration.Tests.csproj",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:cypress": "cypress run",
    "test:cypress:open": "cypress open",
    "test:load": "k6 run k6/load-test.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:cypress",
    "playwright:install": "playwright install chromium",
    "report": "playwright show-report"
  },
  "keywords": [
    "testing",
    "e2e",
    "playwright",
    "cypress",
    "k6",
    "xunit"
  ],
  "author": "CoinPay Team",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.9.1",
    "cypress": "^15.5.0",
    "playwright": "^1.56.1",
    "typescript": "^5.9.3"
  }
}
